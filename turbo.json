{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "globalEnv": [
    "NEXT_PUBLIC_PAYLOAD_URL",
    "PAYLOAD_PUBLIC_SITE_URL",
    "PAYLOAD_PUBLIC_SERVER_URL",
    "DATABASE_URI",
    "PAYLOAD_SECRET",
    "COOKIE_DOMAIN",
    "PAYLOAD_PORT",
    "PAYLOAD_CONFIG_PATH",
    "PAYLOAD_PUBLIC_SEED",
    "PAYLOAD_DROP_DATABASE"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {},
    "test": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
